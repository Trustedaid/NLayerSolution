@{
    ViewData["Title"] = "Index";
}
@model List<NLayer.Core.DTOs.ProductWithCategoryDto>

<table class="table table-striped">
    <thead>
    <tr>

        <td>Id</td>
        <td>Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Category</td>
        <td>CreatedDate</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Stock</td>
            <td>@product.Category.Name</td>
            <td>@product.CreatedDate</td>
        </tr>
    }
    </tbody>


</table>